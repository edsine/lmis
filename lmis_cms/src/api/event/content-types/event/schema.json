{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true,
    "populateCreatorFields": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "event_date": {
      "type": "date",
      "required": true
    },
    "event_time": {
      "type": "time",
      "required": true
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "location": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "status": {
      "type": "boolean"
    },
    "event_comment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::event-comment.event-comment",
      "mappedBy": "event"
    },
    "categories": {
      "type": "enumeration",
      "enum": [
        "trending",
        "popular"
      ]
    }
  }
}
